
worldSettings
{
	windowTitle "Test Scene"
	width 1024
	height 768
	spp 4
	backgroundColor [0.5 0.5 0.5]
	backgroundMusic "bell.wav"
}

camera
{
	name "camera1"
	eye [0 -1 4]
	center [0 0 0]
	vup [0 1 0]
	fovy 0.4
	znear 0.1
	zfar 1000
}

mesh
{
	name "monkeyMesh"
	file "monkeyTex.ply"
}

meshInstance
{
	name "monkey1"
	mesh "monkeyMesh"
	scale [0.5 0.5 0.5]
	vertexShader basicVertexShader.vs
	fragmentShader phongShader.fs
	diffuseTexture "rock-texture.png"
}

meshInstance
{
	name "rockMesh1"
	mesh "monkeyMesh"
	scale [0.5 0.5 0.5]
	vertexShader anotherVertexShader.vs
	fragmentShader phongShader.fs
	diffuseTexture "rock-texture.png"
}
