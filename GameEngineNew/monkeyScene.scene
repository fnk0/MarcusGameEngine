{
	name "monkeyMesh"
	file "monkeyTex.ply"
}

meshInstance
{
	name "monkey1"
	mesh "monkeyMesh"
	scale [0.5 0.5 0.5]
	vertexShader basicVertexShader.vs
	fragmentShader diffuseTexture.fs
	diffuseTexture "hex.png"
}

